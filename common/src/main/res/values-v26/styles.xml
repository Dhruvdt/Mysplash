<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- activity & fragment themes. -->

    <style name="MysplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="search_bar_color">@color/colorSearchBar</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">?attr/content_color</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

    <style name="MysplashTheme.Translucent" parent="MysplashTheme">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="MysplashTheme.TranslucentNavigation"
        parent="MysplashTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="MysplashTheme.Translucent.TranslucentNavigation"
        parent="MysplashTheme.Translucent">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- common activity theme. -->

    <style name="MysplashTheme.Common" parent="MysplashTheme" />

    <style name="MysplashTheme.Translucent.Common" parent="MysplashTheme.Translucent" />

    <!-- popup. -->

    <style name="material_popup_menu"
        parent="@android:style/Widget.Material.Light.PopupMenu.Overflow">
        <item name="android:popupBackground">?attr/root_color</item>
    </style>

    <!-- dialog. -->

    <style name="MysplashDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/colorRoot</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorPrimary">@color/colorTextSubtitle</item>
        <item name="android:textColorAlertDialogListItem">@color/colorTextTitle</item>
        <item name="android:textColorSecondary">@color/colorTextTitle</item>
        <item name="colorAccent">@color/colorTextTitle</item>
    </style>

</resources>