<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
        android:title="@string/muzei_settings_title_source"
        android:key="@string/key_muzei_source"
        android:entries="@array/muzei_sources"
        android:entryValues="@array/muzei_source_values"
        android:defaultValue="collection" />

    <SwitchPreference
        android:title="@string/muzei_settings_title_screen_size_image"
        android:key="@string/key_muzei_screen_size_image"
        android:defaultValue="false" />

    <ListPreference
        android:title="@string/muzei_settings_title_cache_mode"
        android:key="@string/key_muzei_cache_mode"
        android:entries="@array/muzei_cache_modes"
        android:entryValues="@array/muzei_cache_mode_values"
        android:defaultValue="keep" />

    <Preference
        android:title="@string/muzei_settings_title_collection_source"
        android:key="@string/key_muzei_collection_source" />

    <Preference
        android:title="@string/muzei_settings_title_query"
        android:key="@string/key_muzei_query" />

</PreferenceScreen>