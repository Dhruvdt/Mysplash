<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- settings activity. -->

    <style name="MysplashTheme.Translucent.Settings" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="root_color">@color/colorRoot</item>
        <item name="line_color">@color/colorLine</item>
        <item name="title_color">@color/colorTextTitle</item>
        <item name="subtitle_color">@color/colorTextSubtitle</item>
        <item name="content_color">@color/colorTextContent</item>
        <item name="search_bar_color">@color/colorSearchBar</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:popupMenuStyle">@style/material_popup_menu</item>
        <item name="android:colorEdgeEffect">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:alertDialogTheme">@style/MysplashDialogTheme</item>
        <item name="android:listDivider">@color/colorLine</item>
    </style>

</resources>